<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Date verified</th>
      <th>Verified</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.address %></td>
        <td><%= author.date_verified %></td>
        <td><%= author.is_verified ? 'YES' : 'NO' %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Verify', verify_author_path(author) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

